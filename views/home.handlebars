{{! Extiende del layout principal }}
{{#extends 'main'}}

{{#block 'title'}}Productos{{/block}}

{{#block 'body'}}
    <h1>Productos</h1>
    <ul>
        {{#each products}}
        <li>
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>Precio: ${{this.price}}</p>
            <a href="/views/products/{{this._id}}">Ver detalles</a>
            <button data-id="{{this._id}}">Agregar al carrito</button>
        </li>
        {{/each}}
    </ul>
{{/block}}
